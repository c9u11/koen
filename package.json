{
  "name": "koen",
  "version": "1.0.0",
  "description": "Program to convert text to Korean or English",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && electron ./dist/main.js",
    "rebuild": "./node_modules/.bin/electron-rebuild",
    "postinstall": "electron-builder install-app-deps",
    "deploy:xos": "electron-builder --mac",
    "deploy:win32": "electron-builder --win --ia32",
    "deploy:win64": "electron-builder --win --x64",
    "deploy:win": "yarn deploy:win32 && yarn deploy:win64"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/c9u11/koen"
  },
  "keywords": [
    "Electron",
    "typescript"
  ],
  "author": "c9u11",
  "license": "",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.43.0",
    "asar": "^3.2.0",
    "electron": "^18.0.4",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.26.0",
    "typescript": "^4.7.2"
  },
  "iohook": {
    "targets": [
      "node-83",
      "electron-103"
    ],
    "platforms": [
      "win32",
      "darwin",
      "linux"
    ],
    "arches": [
      "x64",
      "ia32",
      "arm64"
    ]
  },
  "dependencies": {
    "robotjs": "^0.6.0"
  },
  "main": "dist/main.js",
  "build": {
    "files": [
      "./assets/",
      "./dist/**/*",
      "./index.html",
      "./index.css"
    ],
    "productName": "KoEn",
    "appId": "com.electron.koen",
    "asar": true,
    "mac": {
      "target": [
        "default"
      ],
      "icon": "./assets/icons/mac/icon.icns"
    },
    "dmg": {
      "title": "KoEn",
      "icon": "./assets/icons/mac/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "./assets/icons/win/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "perMachine": true
    },
    "directories": {
      "output": "./build/"
    }
  }
}
